<Window x:Name="newDocWindow" x:Class="P3.NewDoctorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:P3"
        mc:Ignorable="d"
        Title="New Doctor"  SizeToContent="WidthAndHeight" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
    <Grid x:Name="newDocGrid"  Width="365" Height="434.851">
        <TextBlock x:Name="nameString"  HorizontalAlignment="Left" Height="25.951" Margin="21.879,22.684,0,0" TextWrapping="Wrap" TextAlignment="Center"  FontSize="14" Text="Name:" VerticalAlignment="Top" Width="55.609"/>
        <TextBox x:Name="docNameBlock" HorizontalAlignment="Left" Height="26" TextAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Width="226" Margin="111,23,0,0"/>
        <TextBlock x:Name="hoursStr" FontSize="14" HorizontalAlignment="Left" TextAlignment="Center" Height="25.951" Margin="21.879,109.108,0,0" TextWrapping="Wrap" Text="Hours:" VerticalAlignment="Top" Width="55.609"/>
        <TextBox x:Name="startTBlock" HorizontalAlignment="Left" Height="26" Margin="111,109,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="78"/>
        <TextBox x:Name="endTBlock" HorizontalAlignment="Left" Height="26" Margin="260,109,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="77"/>
        <TextBlock x:Name="toStr"  Text="to" HorizontalAlignment="Left" FontSize="14" TextAlignment="Center" Height="25.951" Margin="213.628,109.108,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="19.845"/>
        <TextBlock x:Name="daysStr" Text="Days:" TextAlignment="Center" FontSize="14" Height="25.951" Width="55.609" Margin="21.879,181.298,287.512,227.601"/>
        <CheckBox x:Name="mondayBox" Content="Monday" FontSize="14" Margin="111,191,163,224.851"/>
        <CheckBox x:Name="tuesdayBox" Content="Tuesday" FontSize="14" Margin="111,229,163,187.851"/>
        <CheckBox x:Name="wednesdayBox" Content="Wednesday" FontSize="14" Margin="111,266,163,150.851"/>
        <CheckBox x:Name="thursdayBox" Content="Thursday" FontSize="14" Margin="111,304,163,113.851"/>
        <CheckBox x:Name="fridayBox" Content="Friday" FontSize="14" Margin="111,341,163,76.851"/>
        <Button x:Name="okButton" Click="okButton_Click" Content="OK" Height="21.968" Canvas.Left="238.528" Canvas.Top="291.848" Width="50.996" Margin="151.004,402.883,163,10" Style="{DynamicResource mediButtonStyle}"/>

    </Grid>
</Window>
